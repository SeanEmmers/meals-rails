<div class="card">
  <div class="card-header">
    <h1>Editing Recipe</h1>
  </div>
  <div class="card-body"><br/>
    <%= render 'form', recipe: @recipe %>
  </div>
    <div class='col-6 col-sm-3'>
      <%= link_to 'Delete Recipe', @recipe, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %>
    </div>
    <div class='col-6 col-sm-3'>
      <%= link_to 'Display', @recipe, class:'btn btn-outline-secondary' %>
    </div>
    <div class='col-6 col-sm-3'>
      <%= link_to 'Back', recipes_path, class:'btn btn-outline-dark'%>
    </div>
  </div>
</div>
